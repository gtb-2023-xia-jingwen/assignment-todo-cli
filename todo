#!/usr/bin/env bash

declare -r TASK_ROOT=$HOME/.todo/
declare -r TASK_FILE=$HOME/.todo/tasks

if [[ $1 == 'init' ]]; then
  if [[ ! -d $TASK_ROOT ]]; then
      mkdir $TASK_ROOT
  fi
  if [[ ! -f $TASK_FILE ]]; then
      touch $TASK_FILE
  fi
  echo "Initialized successfully."
fi

if [[ ! -f $TASK_FILE ]]; then
  echo "Please run 'todo init' before running '<$1>' command."
  exit 1
fi
